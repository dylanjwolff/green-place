{

        "manifest_version": 2,
        "name": "Beastify",
        "version": "1.0",

        "description": "green things",
        "homepage_url": "https://github.com/wolffdy/green-place",
        "icons": {
                "48": "icons/beasts-48.png"
        },

        "permissions": [
                "activeTab"
        ],

        "browser_action": {
                "default_icon": "icons/beasts-32.png",
                "default_title": "Beastify",
                "default_popup": "popup/choose_beast.html"
        },
        "content_scripts": [
                {
                        "matches": ["<all_urls>"],
                        "js": ["borderify.js"]
                }
        ]

}
